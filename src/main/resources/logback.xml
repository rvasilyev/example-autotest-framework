<?xml version="1.0" encoding="UTF-8"?>
<!--Конфигурация логирования через Logback-->
<configuration>
    <property name="message_pattern" value="%magenta(%d{yyyy-MMM-dd HH:mm:ss.SSS} %-5level) [%thread] %logger - %msg%n" />
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%magenta(%d{yyyy-MMM-dd HH:mm:ss.SSS} %-5level) [%thread] %logger - %msg%n</pattern>
        </encoder>
    </appender>
    <appender name="ALLURE" class="com.example.autotest.logging.AllureAppender"/>

    <logger name="org.aspectj.weaver.loadtime.Aj" level="OFF"/>
    <logger name="org.springframework.cloud.openfeign.FeignClientFactoryBean" level="OFF"/>
    <logger name="org.springframework.test.context.support.AnnotationConfigContextLoaderUtils" level="OFF"/>
    <logger name="org.springframework.boot.test.context.SpringBootTestContextBootstrapper" level="OFF"/>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ALLURE"/>
    </root>
</configuration>